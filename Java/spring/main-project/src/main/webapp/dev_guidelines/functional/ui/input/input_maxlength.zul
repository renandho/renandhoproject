<?page title="" contentType="text/html;charset=UTF-8"?>
<zk xmlns:h="native">
	<div sclass="row">
		<div sclass="col-sm-6">
			<div sclass="card z-depth-1">
				<div sclass="card-header bgm-green">
					<h:h2 sclass="text-center">
						<h:i
							class="zmdi zmdi-hc-lg zmdi-check p-r-10">
						</h:i>
						<h:strong>
							Do : Batasi panjang user input sesuai ukuran
							data
						</h:strong>
					</h:h2>
				</div>
				<div sclass="card-body card-padding">
					<div sclass="row">
						<div sclass="col-sm-4 text-right">
							<label value="Nama" />
							<label value="*" style="color: red;" />
						</div>
						<div sclass="col-sm-8">
							<textbox cols="40" maxlength="30" />
						</div>
					</div>
					<div sclass="row p-t-10">
						<div sclass="col-sm-4 text-right"></div>
						<div sclass="col-sm-8">
							<button label="Save"
								image="/icons/Plus-16.png" />
						</div>
					</div>
					<div sclass="row">
						<div sclass="col-sm-12 p-t-10 text-center">
							<h:ul class="clist clist-check">
								<h:li>
									Textbox di atas maximum 30 karakter,
									selebihnya tidak bisa diketik
								</h:li>
							</h:ul>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div sclass="col-sm-6">
			<div sclass="card z-depth-1">
				<div sclass="card-header bgm-red">
					<h:h2 sclass="text-center">
						<h:i
							class="zmdi zmdi-hc-lg zmdi-close p-r-10">
						</h:i>
						Don't
					</h:h2>
				</div>
				<div sclass="card-body card-padding">
					<div sclass="row">
						<div sclass="col-sm-4 text-right">
							<label value="Nama" />
						</div>
						<div sclass="col-sm-8">
							<textbox cols="40" />
						</div>
					</div>
					<div sclass="row p-t-10">
						<div sclass="col-sm-4 text-right"></div>
						<div sclass="col-sm-8">
							<button label="Save"
								image="/icons/Plus-16.png" />
						</div>
					</div>
					<div sclass="row">
						<div sclass="col-sm-12 p-t-10">
							<h:ul class="clist clist-angle">
								<h:li>
									Textbox di atas tidak ada batasan
									jumlah karakter yang bisa dientry
									sehingga dapat error saat save
								</h:li>
							</h:ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</zk>