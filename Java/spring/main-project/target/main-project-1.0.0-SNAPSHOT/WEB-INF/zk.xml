<zk>
	<!-- Theme Property -->
	<library-property>
		<name>org.zkoss.theme.preferred</name>
		<value>sapphire</value>
	</library-property>
	
    <library-property>
        <name>org.zkoss.zul.Button.mold</name>
        <value>trendy</value>
    </library-property>

	<!-- Font Properties -->
	<library-property>
		<name>org.zkoss.zul.theme.fontFamilyT</name>
		<value>'DINMedium', tahoma, arial, sans-serif</value>
	</library-property>
	<library-property>
		<name>org.zkoss.zul.theme.fontFamilyC</name>
		<value>'DINMedium', tahoma, arial, sans-serif</value>
	</library-property>

	<!-- Cluster Environment configuration -->
	<system-config>
		<!-- <id-generator-class>com.fif.hcms.main.util.SequenceIdGenerator</id-generator-class> -->
		<ui-factory-class>
			org.zkoss.zk.ui.http.SerializableUiFactory
		</ui-factory-class>
		<disable-zscript>true</disable-zscript>
	</system-config>

	<session-config>
		<device-type>ajax</device-type>
		<timeout-message>label:application.timeoutMessage</timeout-message>
	</session-config>

	<!-- Configuration ckeditor -->
	<language-config>
		<addon-uri>/WEB-INF/lang-addon.xml</addon-uri>
		<addon-uri>/WEB-INF/ckez-bind-addon.xml</addon-uri>
	</language-config>

	<library-property>
		<name>org.zkoss.util.logging.hierarchy.disabled</name>
		<value>true</value>
	</library-property>
	
</zk>